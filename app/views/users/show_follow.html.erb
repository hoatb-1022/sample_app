<% provide :title, @title %>
<div id="show-follow-page" class="container py-5">
  <div class="row">
    <aside class="col-md-4">
      <section class="mb-4">
        <%= render "shared/user_info", current_user: @user %>
      </section>
      <section>
        <%= render "shared/stats" %>
        <% if @users.any? %>
          <div class="user_avatars">
            <% @users.each do |user| %>
              <%= link_to gravatar_for(user, size: Settings.relationships.show_follow_size), user %>
            <% end %>
          </div>
        <% end %>
      </section>
    </aside>
    <div class="col-md-8">
      <h4 class="text-muted"><%= @title %></h4>
      <hr>
      <% if @users.any? %>
        <ul class="users row">
          <%= render @users, classes: "col-md-6" %>
        </ul>
        <%= paginate @users %>
      <% end %>
    </div>
  </div>
</div>
