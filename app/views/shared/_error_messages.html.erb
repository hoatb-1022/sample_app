<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger" role="alert">
      <%= t "global.the_form_contains" %>
      <%= pluralize @user.errors.count, t("global.error") %>.
    </div>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
